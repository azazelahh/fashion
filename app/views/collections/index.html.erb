<%= csrf_meta_tag %>
  

<style type="text/css">

    html {
		height: 100%;
		width: 100%;
		overflow: auto;
	}
	body {
		text-align: center;
		
		background-repeat:no-repeat;
        margin:0px;
        padding:0px;
        border:none;
	}
	.nav-links {
		background:url(/images/nav-backgr.jpg);
	}
	.contact-body {
		background-image:url(/images/bag.jpg);
		height:700px;
		width:1200px;
	}
	h1 {
		position:absolute;
		top: 100px;
		left: 527px;
		
	}
	table {
		position:absolute;
		top: 150px;
		left: 400px;
		width: 450px;
	}
	
	        
</style>

</head>
  <body>
	<div class="contact-body">
      <header>
        <nav class="nav-links">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Collections", collections_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
          </ul>
        </nav>
      </header>
      <section class="roun">
		<h1>All collections</h1>

<table>
  <% @collections.each do |collection| %>
  <tr>
    <td><%= link_to collection.name, collection %></td>
    <td><%= collection.description %></td>
	<% if false %>
    <td><%= link_to 'Show', collection %></td>
    <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
    <td><%= link_to 'Destroy', collection, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>
		</section>
    </div>
  </body>
</html>

